# ===========================================
# UtilsApp Environment Configuration Template
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ===========================================
# API Configuration
# ===========================================
# Base URL for API calls
BASE_URL_DEV=http://your-dev-server:5000
BASE_URL_PROD=https://your-production-server.com

# ===========================================
# Google Cloud Services
# ===========================================
# Google Cloud Project Configuration
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com
GOOGLE_UNIVERSE_DOMAIN=googleapis.com

# ===========================================
# Firebase Configuration
# ===========================================
# Firebase Project Configuration
FIREBASE_PROJECT_NUMBER=your-project-number
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
FIREBASE_MOBILE_SDK_APP_ID=your-mobile-sdk-app-id
FIREBASE_PACKAGE_NAME=com.yourpackage
FIREBASE_API_KEY=your-firebase-api-key

# ===========================================
# Razorpay Payment Gateway
# ===========================================
# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ===========================================
# OpenAI API
# ===========================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# External API URLs
# ===========================================
# External service URLs
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
RAZORPAY_API_URL=https://api.razorpay.com/v1/orders

# ===========================================
# App Configuration
# ===========================================
# App specific configuration
APP_NAME=Smart Ledger
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# ===========================================
# Security Configuration
# ===========================================
# Security related settings
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
